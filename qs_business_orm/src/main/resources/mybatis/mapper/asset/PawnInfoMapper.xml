                #{evaluateExcellent,jdbcType=VARCHAR},
            </if>
            <if test="evaluateLevel != null">
                #{evaluateLevel,jdbcType=VARCHAR},
            </if>
            <if test="size != null">
                #{size,jdbcType=VARCHAR},
            </if>
            <if test="province != null">
                #{province,jdbcType=VARCHAR},
