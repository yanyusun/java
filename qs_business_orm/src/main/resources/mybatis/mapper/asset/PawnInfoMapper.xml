        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="remark != null">
                remark,
            </if>
            <if test="lenderId != null">
                lender_id,
            </if>
            <if test="pawnNo != null">
                pawn_no,
            </if>
            <if test="amount != null">
                amount,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="evaluateExcellent != null">
                evaluate_excellent,
            </if>
            <if test="evaluateLevel != null">
                evaluate_level,
            </if>
            <if test="size != null">
                size,
            </if>
            <if test="province != null">
                province,
            </if>
            <if test="city != null">
                city,
            </if>
            <if test="district != null">
                district,
            </if>
            <if test="address != null">
                address,
            </if>
            <if test="pawnRate != null">
                pawn_rate,
            </if>
            <if test="disposeStatus != null">
                dispose_status,
            </if>
            <if test="worth != null">
                worth,
            </if>
            <if test="memo != null">
                memo,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="remark != null">
                #{remark,jdbcType=VARCHAR},
            </if>
            <if test="lenderId != null">
                #{lenderId,jdbcType=INTEGER},
            </if>
