      </if>

      <if test="userTypes != null">
        AND user_id IN
        <foreach collection="userTypes" item="ut" separator="," open="(" close=")">
          #{ut}
        </foreach>
      </if>
    </where>
  </sql>

  <!-- 根据ID查询 -->
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select
    <include refid="Base_Column_List" />
    from t_user_tag
